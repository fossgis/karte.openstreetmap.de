{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "files": {
    "includes": [
      "public/**/*.js",
      "public/**/*.css",
      "public/**/*.html",
      "tests/**/*.js",
      "tests/**/*.css",
      "tests/**/*.html",
      "!public/lib/external/**",
      "!tests/lib/external"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "html": {
    "formatter": { "enabled": true }
  }
}
